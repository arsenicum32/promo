@import 'class.styl'

@font-face
  font-family 'DIN Pro'
  font-style normal
  font-weight normal
  src local('DIN Pro Black'), url('../../../assets/font/DINPro.woff') format('woff')

body
  margin 0
  font-family 'DIN Pro'
  //background linear-gradient(to top, #eee, white)


.button
  border 4px solid black
  padding 5px
  font-size 1.2em
  line-height 30px
  outline none
  &:hover
    color white
    background black

a,p,button,input,textarea,h1,h2,h3,h4
  font-family 'DIN Pro'
  text-decoration none
  color black
input,textarea
  outline none
.b-nav
  background #eee
  height 40px
  padding-top 10px
  h1
    line-height 26px
    margin 0
    margin-left 10%
.b-nav__wrap
  display flex
.b-nav__homelink
  margin-left 30px
  a
    margin 10px
    line-height 40px
    text-decoration none
    color black
